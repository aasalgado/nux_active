<div class="form">

<h3> Sign In To Check Out</h1>

<p id="alert"><%= alert %></p>
<%= form_tag sessions_path do %>
<div class="field username">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
</div>
<div class="field password">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
</div>
<div class="submit"><%= submit_tag "Sign In" %></div>
<% end %>

</div>
